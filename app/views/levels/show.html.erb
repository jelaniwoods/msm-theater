<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <%= render object: @level, partial: "card", as: :level %>
  </div>
  <div class="col-md-4 border rounded p-2" style="height:85vh;overflow-y:auto">
    <div>
      <h5>Models:</h5>
      <hr>
      <div class="mb-3">
        <h6>Movie</h6>
        <hr>
        <div class="list-group border border-dark rounded">
          <li class="list-group-item">
            id: integer
          </li>
          <li class="list-group-item">
            title: string
          </li>
          <li class="list-group-item">
            year: integer
          </li>
          <li class="list-group-item">
            duration: integer
          </li>
          <li class="list-group-item">
            director_id: integer
          </li>
        </div>
      </div>
    </div>

    <div>
      <div class="mb-3">
        <h6>Director</h6>
        <hr>
        <div class="list-group border border-dark rounded">
          <li class="list-group-item">
            id: integer
          </li>
          <li class="list-group-item">
            name: string
          </li>
          <li class="list-group-item">
            dob: date
          </li>
          <li class="list-group-item">
            bio: text
          </li>
        </div>
      </div>
    </div>
    <div>
      <div class="mb-3">
        <h6>Actor</h6>
        <hr>
        <div class="list-group border border-dark rounded">
          <li class="list-group-item">
            id: integer
          </li>
          <li class="list-group-item">
            name: string
          </li>
          <li class="list-group-item">
            dob: date
          </li>
          <li class="list-group-item">
            bio: text
          </li>
        </div>
      </div>
    </div>

    <div>
      <div class="mb-3">
        <h6>Role</h6>
        <hr>
        <div class="list-group border border-dark rounded">
          <li class="list-group-item">
            id: integer
          </li>
          <li class="list-group-item">
            character_name: string
          </li>
          <li class="list-group-item">
            actor_id: integer
          </li>
          <li class="list-group-item">
            movie_id: integer
          </li>
        </div>
      </div>
    </div>
  </div>
</div>
